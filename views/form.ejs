<script type="text/javascript">
    $("#addItem").on('click', function () {
        var type = $("#type").val();
        var item = $("#item").val();
        var price = $("#price").val();
        console.log(type  + item + price);
        if(type == 1){
            $('#food').append("<tr><td>" + item + "</td><td>"+ price +"</td></tr>");
        }else{
            $('#drink').append("<tr><td>" + item + "</td><td>"+ price +"</td></tr>");
        }
    });

    $("#addlAndT").on("click", function () {
        var end = $("#end").val();
        var start = $("#start").val();
        var last = $("#last").val();
        $("#lAndT").append("<tr><td>" + end + "</td><td>"+ start +"</td><td>" + last +"</td></tr>")
    });

    $("body").on("change", "#presence", function () {
        if($("#presence").val() == 1){
            $("#presence1").css("display", "block");
            $("#presence2").css("display", "none");
        }else{
            $("#presence1").css("display", "none");
            $("#presence2").css("display", "block");
        }
    })

    $(document).ready(function(){
        $('.timepicker').timepicker();
    });
